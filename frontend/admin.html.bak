    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=IBM+Plex+Sans+Thai:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="nav-wrapper">
                <div class="logo">üõ°Ô∏è ThaiScam Guard</div>
                <nav class="nav-links">
                    <a href="/content.html">üìö ‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤</a>
                    <a href="/api.html">üì° API</a>
                    <a href="/privacy.html">üîí ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏õ‡πá‡∏ô‡∏™‡πà‡∏ß‡∏ô‡∏ï‡∏±‡∏ß</a>
                    <a href="/admin.html" style="color: #fbbf24;">‚öôÔ∏è Admin</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Login Form -->
            <div id="loginContainer" class="detection-card">
                <h2 class="card-title">üîê Admin Login</h2>
                <form id="loginForm" class="detection-form">
                    <div class="form-group">
                        <label for="adminToken" class="form-label">Admin Token</label>
                        <input 
                            type="password" 
                            id="adminToken" 
                            class="form-textarea" 
                            placeholder="Enter admin token"
                            style="min-height: auto; padding: 1rem;"
                            required
                        >
                    </div>
                    <button type="submit" class="btn-primary">
                        <span class="btn-text">üîì Login</span>
                    </button>
                </form>
            </div>

            <!-- Dashboard (hidden until logged in) -->
            <div id="dashboardContainer" style="display:none;">
                <!-- Controls -->
                <div class="admin-controls">
                    <div class="control-group">
                        <label for="timeRange" class="control-label">Time Range:</label>
                        <select id="timeRange" class="control-select">
                            <option value="7">Last 7 Days</option>
                            <option value="30">Last 30 Days</option>
                            <option value="365">Last 365 Days</option>
                        </select>
                    </div>
                    <button id="refreshBtn" class="btn-secondary">üîÑ Refresh</button>
                </div>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">üìä</div>
                        <div class="stat-value" id="totalRequests">-</div>
                        <div class="stat-label">Total Requests</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">‚ö†Ô∏è</div>
                        <div class="stat-value" id="scamRatio">-</div>
                        <div class="stat-label">Scam Ratio</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">üë•</div>
                        <div class="stat-value" id="totalPartners">-</div>
                        <div class="stat-label">Active Partners</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">üåê</div>
                        <div class="stat-value" id="publicRequests">-</div>
                        <div class="stat-label">Public Requests</div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="charts-row">
                    <!-- Daily Requests Chart -->
                    <div class="chart-card">
                        <h3 class="chart-title">üìà Daily Requests</h3>
                        <canvas id="dailyChart"></canvas>
                    </div>

                    <!-- Category Distribution Chart -->
                    <div class="chart-card">
                        <h3 class="chart-title">üéØ Category Distribution</h3>
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>

                <!-- Partner Stats Table -->
                <div class="detection-card">
                    <h2 class="card-title">ü§ù Partner Usage Statistics</h2>
                    <div class="table-container">
                        <table class="partner-table">
                            <thead>
                                <tr>
                                    <th>Partner Name</th>
                                    <th>Status</th>
                                    <th>Rate Limit</th>
                                    <th>Total Requests</th>
                                    <th>Scam Count</th>
                                    <th>Scam Ratio</th>
                                    <th>Avg Risk Score</th>
                                </tr>
                            </thead>
                            <tbody id="partnerTableBody">
                                <tr>
                                    <td colspan="7" style="text-align:center;">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Error Display -->
            <div id="errorContainer" class="error-container" style="display: none;">
                <div class="error-card">
                    <h3 class="error-title">‚ö†Ô∏è Error</h3>
                    <p id="errorMessage" class="error-message"></p>
                </div>
            </div>
        </div>
